        </require>
        <code>
        <![CDATA[
function tag_parse(url, html)
{
    var $ = cheerio.load(html);  
    var list = [];

    $("#w0 .list_con_li li").each(function() 
		{
            var bm = {}
			var li = $(this);

            var h3 = li.children('span').children("h3")
			bm.name = h3.text()
			bm.url = h3.children().attr("href")
            bm.logo = li.children('a').children('img').attr("src")
            bm.author = li.children('span').children("p").eq(0).text().split("：")[1]
            bm.status = li.children('span').children("p").eq(2).text()
            bm.newSection = li.children('span').children("p").eq(3).text()
            list.push(bm);
		});

    return JSON.stringify(list);
}
function book_parse(url, html) 
{
    var $ = cheerio.load(html);
    var data = {};

    data.name = $("h1").text()
    data.author = $(".comic_deCon_liO").children("li").eq(0).children("a").text()
    data.logo = $(".comic_i_img").children().attr("src")
    data.updateTime = "";
    data.intro = $(".comic_deCon_d").eq(0).text().split("漫画简介：")[1].trim()
    data.isSectionsAsc = 0;
    
    data.sections = [];

    $(".zj_list.autoHeight").each(function() 
    {
        var div = $(this)

        if(div.children().hasClass("zj_list_head"))
        {
            data.sections.push({url:"",name:div.children(".zj_list_head").children().children().text()});
            div.children(".zj_list_con.autoHeight").children('ul').children('li').each(function()
            {
                var li = $(this)
                var url = li.children().attr("href")
                url = "https://www.manhuafen.com" + url
                data.sections.push({url:url,name:li.children().attr("title")});

            })
        }
    });

    data.sections.reverse();
    return JSON.stringify(data);
}
function section_parse(url, html) 
{
    var $ = cheerio.load(html);

    var str = $(".mainNav.independNav").next()[0].children[0].data
    var chapters = str.match('chapterImages = "(.*?)";')[1]
    // console.log(ss);
    var list = 
    JSON.parse
    (
        CryptoJS.AES.decrypt
        (
            chapters, CryptoJS.enc.Utf8.parse("123456781234567G"), 
            { 
                iv: CryptoJS.enc.Utf8.parse('ABCDEF1G34123412'), 
                mode: CryptoJS.mode.CBC, 
                padding: CryptoJS.pad.Pkcs7 
            }
        ).toString(CryptoJS.enc.Utf8)
    )

    return JSON.stringify(list);
}
function search_parse(url,html) 
{
    var $ = cheerio.load(html);
    var list = [];

    $("#w0 .list_con_li li").each(function() 
    {
        var bm = {}
        var li = $(this);

        var a = li.children('a')
        bm.name = a.attr("title")
        bm.url = a.attr("href")
        bm.logo = a.children('img').attr("src")
        bm.author = li.children('p').eq(1).text()
        bm.status = ""
        bm.newSection = li.children('p').eq(2).text()
        list.push(bm);
    });

    return JSON.stringify(list);
}
